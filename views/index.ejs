<% include partials/header %>
<h1 class="text-center">Welcome to the Express Library!</h1>
<a href="/books/new">Add a new book</a>
<table class ="table table-striped table-hover">
<thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Year</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
</thead>
<tbody>

<% books.forEach(function(book){ %>
  <tr>
    <td><a href="/books/<%= book.id%>"><%= book.title %></a></td>
    <td><%= book.author %></td>
    <td><%= book.year %></td>
    <td><a href="/books/<%= book.id %>/edit">Edit</a></td>
    <td><form action="/books/<%= book.id %>?_method=delete" method= "POST"><input type="submit" value="X" class="btn btn-danger btn-xs"></form></td>
  </tr>
<% })%>
</tbody>
</table>
<% include partials/footer %>


